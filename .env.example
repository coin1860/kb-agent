# KB Agent Configuration Template
# Copy this file to .env and fill in your values

# LLM Provider Configuration (Required)
# Compatible with OpenAI, Azure, Groq, LocalAI, etc.
KB_AGENT_LLM_API_KEY="your-api-key-here"
KB_AGENT_LLM_BASE_URL="https://api.openai.com/v1"
KB_AGENT_LLM_MODEL="gpt-4"

# Embedding Configuration (Optional)
# If KB_AGENT_EMBEDDING_URL is provided, it uses the given endpoint instead of downloading local models.
# KB_AGENT_EMBEDDING_URL="http://localhost:7999/v1"
KB_AGENT_EMBEDDING_MODEL="all-MiniLM-L6-v2"

# Paths (Optional)
# Data Folder: Creates `source`, `index`, and `archive` subdirectories.
KB_AGENT_DATA_FOLDER="~/data/kb-agent"

# Proxy (Optional)
# KB_AGENT_HTTP_PROXY="http://proxy.example.com:8080"
# KB_AGENT_HTTPS_PROXY="http://proxy.example.com:8080"

# External Integrations (Optional placeholders)
# KB_AGENT_JIRA_URL="https://jira.example.com"
# KB_AGENT_JIRA_TOKEN="your-jira-api-token"
# KB_AGENT_CONFLUENCE_URL="https://confluence.example.com"
# KB_AGENT_CONFLUENCE_TOKEN="your-confluence-api-token"

# Web Engine (default: markdownify)
# Options: "markdownify" (lightweight, no browser) or "crawl4ai" (Playwright, JS rendering)
KB_AGENT_WEB_ENGINE="markdownify"

# Agent RAG Configuration
# Agent RAG iterations (default: 1, max: 5)
KB_AGENT_MAX_ITERATIONS="1"

# Fast-Path Optimization Settings
# Vector score threshold for automatic evidence approval (default: 0.8)
KB_AGENT_VECTOR_SCORE_THRESHOLD="0.8"
# Max number of context items to automatically approve without LLM grading (default: 2)
KB_AGENT_AUTO_APPROVE_MAX_ITEMS="2"
